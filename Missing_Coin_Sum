#include <bits/stdc++.h>
using namespace std;

int main()
{
   long long n;
   cin>>n;
   vector <long long > v(n);
   for(int i=0;i<n;i++)
   {
   		cin>>v[i];
   }
   
   sort(v.begin(),v.end()); // sort the array
   
   long long ans=1;
   for(int i=0;i<n;i++)
   {
   		if(ans<v[i])
   		{
   			break; // break if ans < current element
   		}
   		else 
   		{
   			ans+=v[i]; // add the current element 
   		}
   }
   
   cout<<ans<<endl;
   
    return 0;
}
